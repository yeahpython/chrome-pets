{
  "name": "Emoji Pet",
  "description": "Get your own cute emoji pets to explore the internet with you!",
  "version": "1.3",
  "permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "scripts":["background.js"],
    "persistent":false
  },
  "browser_action": {
    "default_icon": {
      "19": "images/emoji-19.png",
      "38": "images/emoji-38.png"
    }
  },
  "manifest_version": 2
}